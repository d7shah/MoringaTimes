<h1>Create a new article</h1>

<div>
	<p>
	<%= form_for(@article) do |f| %>
		
		<p>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :content %>
			<%= f.text_area :content %>
		</p>


		<p>
			<%= f.label :author %>
			<%= f.text_field :author %>
		</p>


		<p>
			<%= f.submit %>
		</p>

	<% end %>
	</p>

</div>